<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    tools:context="com.codetribe.basketballscoreboard.MainActivity">

    <Button
        android:id="@+id/btnteamA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="99dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:text="Score" />

    <Button
        android:id="@+id/btnreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnteamB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Reset" />

    <Button
        android:id="@+id/btnteamB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnteamA"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="score" />

    <TextView
        android:id="@+id/txtScoreA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnteamA"
        android:layout_alignLeft="@+id/btnteamA"
        android:layout_alignStart="@+id/btnteamA"
        android:layout_marginBottom="49dp"
        android:text="0" />

    <TextView
        android:id="@+id/txtscoreB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnteamB"
        android:layout_alignRight="@+id/btnteamB"
        android:layout_alignTop="@+id/txtScoreA"
        android:text="0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtScoreA"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        app:srcCompat="@drawable/images" />

    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="86dp"
        android:text="BASKETBALL SCORE BOARD"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_above="@+id/txtScoreA"
        android:layout_toLeftOf="@+id/btnteamB"
        android:layout_toStartOf="@+id/btnteamB" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnteamA"
        android:layout_alignStart="@+id/btnteamA"
        android:layout_alignTop="@+id/txtHeading"
        android:layout_marginTop="33dp"
        android:text="HOME" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AWAY"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/txtHeading"
        android:layout_alignRight="@+id/txtscoreB"
        android:layout_alignEnd="@+id/txtscoreB" />
</RelativeLayout>
